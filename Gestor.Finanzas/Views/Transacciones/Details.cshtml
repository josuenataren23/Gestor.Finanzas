@model Gestor.Finanzas.Models.Transaccione
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Detalle de Transacción";

    bool esIngreso = Model.tipo_id == 2;
    string colorMonto = esIngreso ? "text-emerald-400" : "text-red-400";
    string colorBadge = esIngreso ? "bg-emerald-900/40 text-emerald-400 border border-emerald-700" : "bg-red-900/40 text-red-400 border border-red-700";
    string iconoTipo = esIngreso ? "fa-arrow-down-to-line" : "fa-arrow-up-from-line";
    string labelTipo = esIngreso ? "Ingreso" : "Gasto";
}

<!-- ═════════ HEADER ═════════ -->
<header class="border-b border-slate-800 px-6 py-3 flex items-center justify-between gap-4">
    <div>
        <h2 class="text-white text-lg font-semibold">Detalle de transacción</h2>
        <p class="text-slate-400 text-xs">Información completa del movimiento</p>
    </div>
    <a href="@Url.Action("Index","Transacciones")"
       class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm">
        <i class="fa-solid fa-arrow-left"></i>
        Volver
    </a>
</header>

<!-- ═════════ MAIN ═════════ -->
<main class="overflow-y-auto p-6">
    <div class="max-w-xl mx-auto">

        <!-- Tarjeta principal -->
        <div class="bg-slate-800 border border-slate-700 rounded-2xl overflow-hidden">

            <!-- Encabezado de tarjeta -->
            <div class="bg-slate-900 px-6 py-5 flex items-center justify-between border-b border-slate-700">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl flex items-center justify-center
                                @(esIngreso ? "bg-emerald-900/50 text-emerald-400" : "bg-red-900/50 text-red-400")">
                        <i class="fa-solid @iconoTipo"></i>
                    </div>
                    <div>
                        <p class="text-white font-semibold text-sm">
                            @(string.IsNullOrEmpty(Model.descripcion) ? "Sin descripción" : Model.descripcion)
                        </p>
                        <p class="text-slate-400 text-xs">
                            @Model.fecha_transaccion.ToString("dddd, dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-MX"))
                        </p>
                    </div>
                </div>
                <span class="text-2xl font-bold @colorMonto">
                    @(esIngreso ? "+" : "-")$@Math.Abs(Model.monto).ToString("N2")
                </span>
            </div>

            <!-- Filas de datos -->
            <div class="divide-y divide-slate-700">

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Tipo</span>
                    <span class="px-3 py-1 rounded-lg text-xs font-semibold @colorBadge">
                        <i class="fa-solid @iconoTipo mr-1"></i>@labelTipo
                    </span>
                </div>

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Categoría</span>
                    @if (Model.Categoria != null)
                    {
                        <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-lg text-xs">
                            @Model.Categoria.nombre
                        </span>
                    }
                    else
                    {
                        <span class="text-slate-500 text-xs">Sin categoría</span>
                    }
                </div>

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Monto</span>
                    <span class="font-bold @colorMonto">
                        @(esIngreso ? "+" : "-")$@Math.Abs(Model.monto).ToString("N2")
                    </span>
                </div>

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Fecha</span>
                    <span class="text-white text-sm">@Model.fecha_transaccion.ToString("dd/MM/yyyy")</span>
                </div>

                <div class="px-6 py-4 flex items-start justify-between gap-4">
                    <span class="text-slate-400 text-sm shrink-0">Descripción</span>
                    <span class="text-white text-sm text-right">
                        @(string.IsNullOrEmpty(Model.descripcion) ? "Sin descripción" : Model.descripcion)
                    </span>
                </div>

            </div>
        </div>

        <!-- Acciones -->
        <div class="flex items-center gap-3 mt-4">
            <a href="@Url.Action("Edit", new { id = Model.id })"
               class="flex-1 flex items-center justify-center gap-2 bg-violet-600 hover:bg-violet-500 transition-colors text-white px-4 py-2.5 rounded-xl text-sm font-semibold">
                <i class="fa-solid fa-pen-to-square"></i>
                Editar
            </a>
            <a href="@Url.Action("Delete", new { id = Model.id })"
               class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-red-900/60 border border-slate-600 hover:border-red-700 transition-colors text-slate-300 hover:text-red-400 px-4 py-2.5 rounded-xl text-sm font-semibold">
                <i class="fa-solid fa-trash"></i>
                Eliminar
            </a>
        </div>

    </div>
</main>
