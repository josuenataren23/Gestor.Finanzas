@model Gestor.Finanzas.Models.Transaccione
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Eliminar Transacción";

    bool esIngreso = Model.tipo_id == 2;
    string colorMonto = esIngreso ? "text-emerald-400" : "text-red-400";
    string iconoTipo = esIngreso ? "fa-arrow-down-to-line" : "fa-arrow-up-from-line";
    string labelTipo = esIngreso ? "Ingreso" : "Gasto";
}

<!-- ═════════ HEADER ═════════ -->
<header class="border-b border-slate-800 px-6 py-3 flex items-center justify-between gap-4">
    <div>
        <h2 class="text-white text-lg font-semibold">Eliminar transacción</h2>
        <p class="text-slate-400 text-xs">Esta acción no se puede deshacer</p>
    </div>
    <a href="@Url.Action("Index","Transacciones")"
       class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm">
        <i class="fa-solid fa-arrow-left"></i>
        Volver
    </a>
</header>

<!-- ═════════ MAIN ═════════ -->
<main class="overflow-y-auto p-6">
    <div class="max-w-xl mx-auto space-y-4">

        <!-- Aviso de peligro -->
        <div class="bg-red-900/30 border border-red-700/60 rounded-2xl px-5 py-4 flex items-start gap-3">
            <i class="fa-solid fa-triangle-exclamation text-red-400 text-lg mt-0.5 shrink-0"></i>
            <div>
                <p class="text-red-300 font-semibold text-sm">¿Seguro que deseas eliminar esta transacción?</p>
                <p class="text-red-400/70 text-xs mt-1">Se eliminará permanentemente y no podrás recuperarla.</p>
            </div>
        </div>

        <!-- Tarjeta de la transacción -->
        <div class="bg-slate-800 border border-slate-700 rounded-2xl overflow-hidden">

            <div class="bg-slate-900 px-6 py-5 flex items-center justify-between border-b border-slate-700">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl flex items-center justify-center
                                @(esIngreso ? "bg-emerald-900/50 text-emerald-400" : "bg-red-900/50 text-red-400")">
                        <i class="fa-solid @iconoTipo"></i>
                    </div>
                    <div>
                        <p class="text-white font-semibold text-sm">
                            @(string.IsNullOrEmpty(Model.descripcion) ? "Sin descripción" : Model.descripcion)
                        </p>
                        <p class="text-slate-400 text-xs">
                            @Model.fecha_transaccion.ToString("dd/MM/yyyy")
                        </p>
                    </div>
                </div>
                <span class="text-2xl font-bold @colorMonto">
                    @(esIngreso ? "+" : "-")$@Math.Abs(Model.monto).ToString("N2")
                </span>
            </div>

            <div class="divide-y divide-slate-700">

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Tipo</span>
                    <span class="text-white text-sm font-semibold">@labelTipo</span>
                </div>

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Categoría</span>
                    @if (Model.Categoria != null)
                    {
                        <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-lg text-xs">
                            @Model.Categoria.nombre
                        </span>
                    }
                    else
                    {
                        <span class="text-slate-500 text-xs">Sin categoría</span>
                    }
                </div>

                <div class="px-6 py-4 flex items-center justify-between">
                    <span class="text-slate-400 text-sm">Fecha</span>
                    <span class="text-white text-sm">@Model.fecha_transaccion.ToString("dd/MM/yyyy")</span>
                </div>

            </div>
        </div>

        <!-- Botones de confirmación -->
        @using (Html.BeginForm("Delete", "Transacciones", FormMethod.Post, new { @class = "flex items-center gap-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id", Model.id)

            <button type="submit"
                    class="flex-1 flex items-center justify-center gap-2 bg-red-600 hover:bg-red-500 transition-colors text-white px-4 py-2.5 rounded-xl text-sm font-semibold">
                <i class="fa-solid fa-trash"></i>
                Sí, eliminar
            </button>
            <a href="@Url.Action("Index","Transacciones")"
               class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 border border-slate-600 transition-colors text-slate-300 px-4 py-2.5 rounded-xl text-sm font-semibold">
                Cancelar
            </a>
        }

    </div>
</main>
