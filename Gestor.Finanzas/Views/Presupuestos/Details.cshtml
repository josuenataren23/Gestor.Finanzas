@model Gestor.Finanzas.Models.Presupuesto
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Detalle de Presupuesto";

    decimal gastado = Model.monto_gastado ?? 0;
    decimal disp = Model.monto_objetivo - gastado;
    double pct = Model.monto_objetivo > 0
        ? Math.Min(100, (double)(gastado / Model.monto_objetivo) * 100) : 0;
    bool excedido = gastado > Model.monto_objetivo;
    bool critico = pct >= 85 && !excedido;

    string barColor = excedido ? "bg-red-500" : critico ? "bg-orange-400" : "bg-violet-500";
    string pctColor = excedido ? "text-red-400" : critico ? "text-orange-400" : "text-violet-400";
    string dispColor = excedido ? "text-red-400" : "text-violet-400";
}

<!-- ═════════ HEADER ═════════ -->
<header class="border-b border-slate-800 px-6 py-3 flex items-center justify-between gap-4">
    <div>
        <h2 class="text-white text-lg font-semibold">Detalle de presupuesto</h2>
        <p class="text-slate-400 text-xs">Información y estado del presupuesto</p>
    </div>
    <a href="@Url.Action("Index","Presupuestos")"
       class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm">
        <i class="fa-solid fa-arrow-left"></i>
        Volver
    </a>
</header>

<!-- ═════════ MAIN ═════════ -->
<main class="overflow-y-auto p-6">
    <div class="max-w-xl mx-auto space-y-4">

        <!-- Tarjeta principal -->
        <div class="bg-slate-800 border border-slate-700 rounded-2xl overflow-hidden">

            <!-- Encabezado -->
            <div class="bg-slate-900 px-6 py-5 border-b border-slate-700 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-violet-900/50 text-violet-400 flex items-center justify-center">
                        <i class="fa-solid fa-tag"></i>
                    </div>
                    <div>
                        <p class="text-white font-semibold">
                            @(Model.Categoria != null ? Model.Categoria.nombre : "Sin categoría")
                        </p>
                        <p class="text-slate-400 text-xs">
                            Creado @(Model.fecha_creacion.HasValue ? Model.fecha_creacion.Value.ToString("dd/MM/yyyy") : "—")
                        </p>
                    </div>
                </div>
                @if (excedido)
                {
                    <span class="bg-red-900/40 border border-red-700 text-red-400 text-xs px-3 py-1 rounded-lg font-semibold">
                        <i class="fa-solid fa-triangle-exclamation mr-1"></i>Excedido
                    </span>
                }
                else if (critico)
                {
                    <span class="bg-orange-900/40 border border-orange-700 text-orange-400 text-xs px-3 py-1 rounded-lg font-semibold">
                        <i class="fa-solid fa-circle-exclamation mr-1"></i>Límite cercano
                    </span>
                }
                else
                {
                    <span class="bg-emerald-900/40 border border-emerald-700 text-emerald-400 text-xs px-3 py-1 rounded-lg font-semibold">
                        <i class="fa-solid fa-circle-check mr-1"></i>En control
                    </span>
                }
            </div>

            <!-- Monto y barra -->
            <div class="px-6 py-5 border-b border-slate-700">
                <div class="flex items-baseline gap-1 mb-3">
                    <span class="text-white text-3xl font-bold">$@gastado.ToString("N2")</span>
                    <span class="text-slate-400">/ $@Model.monto_objetivo.ToString("N2")</span>
                    <span class="ml-auto text-lg font-bold @pctColor">@pct.ToString("N0")%</span>
                </div>
                <div class="h-2 bg-slate-700 rounded-full overflow-hidden">
                    <div class="h-full @barColor rounded-full transition-all"
                         style="width: @pct.ToString("N1", System.Globalization.CultureInfo.InvariantCulture)%">
                    </div>
                </div>
            </div>

            <!-- Filas de datos -->
            <div class="divide-y divide-slate-700">

                <div class="px-6 py-4 flex justify-between">
                    <span class="text-slate-400 text-sm">Monto objetivo</span>
                    <span class="text-white font-semibold text-sm">$@Model.monto_objetivo.ToString("N2")</span>
                </div>

                <div class="px-6 py-4 flex justify-between">
                    <span class="text-slate-400 text-sm">Monto gastado</span>
                    <span class="text-white font-semibold text-sm">$@gastado.ToString("N2")</span>
                </div>

                <div class="px-6 py-4 flex justify-between">
                    <span class="text-slate-400 text-sm">Disponible</span>
                    <span class="@dispColor font-semibold text-sm">$@disp.ToString("N2")</span>
                </div>

                <div class="px-6 py-4 flex justify-between">
                    <span class="text-slate-400 text-sm">Categoría</span>
                    <span class="bg-slate-700 text-slate-300 px-3 py-1 rounded-lg text-xs">
                        @(Model.Categoria != null ? Model.Categoria.nombre : "—")
                    </span>
                </div>

                <div class="px-6 py-4 flex justify-between">
                    <span class="text-slate-400 text-sm">Fecha de creación</span>
                    <span class="text-white text-sm">
                        @(Model.fecha_creacion.HasValue ? Model.fecha_creacion.Value.ToString("dd/MM/yyyy") : "—")
                    </span>
                </div>

            </div>
        </div>

        <!-- Acciones -->
        <div class="flex items-center gap-3">
            <a href="@Url.Action("Edit", new { id = Model.id })"
               class="flex-1 flex items-center justify-center gap-2 bg-violet-600 hover:bg-violet-500 transition-colors text-white px-4 py-2.5 rounded-xl text-sm font-semibold">
                <i class="fa-solid fa-pen-to-square"></i>
                Editar
            </a>
            <a href="@Url.Action("Delete", new { id = Model.id })"
               class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-red-900/60 border border-slate-600 hover:border-red-700 transition-colors text-slate-300 hover:text-red-400 px-4 py-2.5 rounded-xl text-sm font-semibold">
                <i class="fa-solid fa-trash"></i>
                Eliminar
            </a>
        </div>

    </div>
</main>
